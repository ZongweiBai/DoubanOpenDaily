<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.AuthorMainPageActivity">

    <include layout="@layout/toolbar_common"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/author_main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_main_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingTop="24dp"
                    android:touchscreenBlocksFocus="false">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/author_main_img"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_default_avatar_light"/>

                    <TextView
                        android:id="@+id/author_main_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/app_name"
                        android:textColor="@color/content_tile_unread"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/author_address"
                            android:textColor="@color/content_tile_readed"
                            android:textSize="@dimen/text_size_14"/>

                        <TextView
                            android:id="@+id/loc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="广州"
                            android:textColor="@color/content_label_readed"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_horizontal_margin"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/common_horizontal_margin">

                        <TextView
                            android:id="@+id/author_main_like"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="@dimen/common_horizontal_margin"
                            android:background="@drawable/btn_main_color_bg"
                            android:gravity="center"
                            android:padding="@dimen/common_horizontal_margin"
                            android:text="@string/author_main_like"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:id="@+id/author_main_intro"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_horizontal_margin"
                            android:background="@drawable/author_page_bg"
                            android:gravity="center"
                            android:padding="@dimen/common_horizontal_margin"
                            android:text="@string/author_main_intro"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_size_16"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/drawer_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/like_num"
                            android:textColor="@color/content_tile_readed"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:id="@+id/following_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/drawer_line"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/be_like_num"
                            android:textColor="@color/content_tile_readed"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:id="@+id/follower_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/common_horizontal_margin"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="广播"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/status_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/common_horizontal_margin"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="日记"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/note_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/common_horizontal_margin"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="相册"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/album_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/common_horizontal_margin"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="书影音长评"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="电影"
                    android:textColor="@color/content_label_readed"
                    android:textSize="@dimen/text_size_16"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="看过"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/movie_collect_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="想看"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/movie_wish_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="在看"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/movie_do_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="读书"
                    android:textColor="@color/content_label_readed"
                    android:textSize="@dimen/text_size_16"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="读过"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/book_collect_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="想读"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/book_wish_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="在读"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/book_do_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="音乐"
                    android:textColor="@color/content_label_readed"
                    android:textSize="@dimen/text_size_16"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="听过"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/music_collect_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="想听"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/music_wish_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/app_main_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="在听"
                        android:textColor="@color/content_tile_readed"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/music_do_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:drawableRight="@mipmap/ic_profile_arrow"
                        android:gravity="center_vertical"
                        android:text="1"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_14"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/logoff_btn"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/author_page_bg"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/logoff_btn"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
